	<insert id="addConquest">
		<selectKey keyProperty="no" order="BEFORE" resultType="long">
			select seq_conquest.nextval FROM Dual
		</selectKey>
		insert into conquest (no, member_no, mountain_no, conquestcnt )
		values
		(#{no}, #{member_no}, #{mountain_no}, #{conquestcnt})

	</insert>
	<update id="updateConquest">
		UPDATE Conquest
		SET
		conquestcnt = #{conquestcnt},
		condate = sysdate
		where
		no= #{no}
	</update>
	
	
<!-- 레코드 갯수 확인용 -->
	<select id="checkCnt">
		select count(*) from conquest
		where member_no = #{member_no}
		and mountain_no = #{mountain_no}
	</select>

	<!-- for CONQUEST table -->
	<select id="getMnameList"
		resultType="org.zerock.domain.mountain.MnameVO">
		SELECT no, mname FROM mountain
		ORDER BY mname
	</select>

	<select id="getConqListbyMem" parameterType="long"
		resultType="org.zerock.domain.mountain.ConqStickerVO">
	<!-- 	SELECT mountain_no, mname, sum(conquestcnt) conquestcnt
